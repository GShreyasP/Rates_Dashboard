{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|svg|woff|woff2))",
      "dest": "/Frontend/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/frontend/index.html"
    }
  ],
  "buildCommand": "cd Frontend/frontend && npm install && npm run build"
}
